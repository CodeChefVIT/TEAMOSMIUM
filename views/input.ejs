    <div class="container border rounded p-5 my-5 bg-dark">
    
            <form action="/input" method="POST" class="form-group text-light">
                <h3 class="text-center">Applicant Details</h3>
                <div class="form-group">
                        <label for="name"> Name </label>
                        <input type="text" class="form-control" name="Loan_ID" id="name" placeholder="Write Name Here">
                </div>
                <label for="GenderGroup">Gender</label>
                <div class="form-group form-inline" id="GenderGroup">
                    <div class="custom-control custom-radio mx-2">
                        <input type="radio" name="Gender" class="custom-control-input" value="Male" id="GenderM">
                        <label for="GenderM" class="custom-control-label">Male</label>
                    </div>
                    <div class="custom-control custom-radio mx-2">
                        <input type="radio" name="Gender" class="custom-control-input" value="Female" id="GenderF">
                        <label for="GenderF" class="custom-control-label">Female</label>
                    </div>
                </div>
                
                
                <label for="Dependent">No of Dependents</label>
                <div class="form-group form-inline" id="Dependent">
                        <div class="custom-control custom-radio mx-3">
                                <input type="radio" name="Dependents" value="0" class="custom-control-input" id="Dependent0">
                                <label for="Dependent0" class="custom-control-label">0</label>
                        </div>
                        <div class="custom-control custom-radio mx-3">
                                <input type="radio" name="Dependents" value="1" class="custom-control-input" id="Dependent1">
                                <label for="Dependent1" class="custom-control-label">1</label>
                        </div>
                        <div class="custom-control custom-radio mx-3">
                                <input type="radio" name="Dependents" value="2" class="custom-control-input" id="Dependent2">
                                <label for="Dependent2" class="custom-control-label">2</label>
                        </div>
                        <div class="custom-control custom-radio mx-3">
                                <input type="radio" name="Dependents" value="3+" class="custom-control-input" id="Dependent3">
                                <label for="Dependent3" class="custom-control-label">3+</label>
                        </div>
                </div>
                <div class="form-group">
                    <div class="row">

                        <div class="col-sm-4 form-group mr-auto">
                            <label for="MartialStatus">Martial Status</label>
                            <select id="MartialStatus" name="Married" class="form-control">
                                <option value="Yes">Married</option>
                                <option value="No">Unmarried</option>
                            </select>
                        </div>
                        <div class="col-sm-4 form-group mr-auto">
                            <label for="EducationQual">Educational Qualification</label>
                            <select id="EducationQual" name="Education" class="form-control">
                                <option value="Graduate">Graduate</option>
                                <option value="Not Graduate">Not Graduate</option>
                            </select>
                        </div>
                        <div class="form-group col-sm-4">
                                <label for="SelfEmployeed">Self-Employeed</label>
                                <select id="SelfEmployeed" name="Self_Employed" class="form-control">
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                </select>
                        </div>
                    </div>
                </div>
                   
                <div class="form-group">
                    <div class="row">

                        <div class="form-group col-sm-6">
                            <label for="appincome"> Applicant Income</label>
                            <input type="number" name="ApplicantIncome" class="form-control" id="appincome" placeholder="Should be greater than 0">
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="coappincome"> Co-Applicant Income</label>
                            <input type="number" name="CoapplicantIncome" class="form-control" id="coappincome" placeholder="Should be greater than 0">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                        <div class="row">
                <div class="form-group col-sm-6">
                        <label for="loanamount"> Loan Amount</label>
                        <input type="number" name="LoanAmount" class="form-control" id="loanamount" placeholder="Should be greater than 0">
                </div>
                <div class="form-group col-sm-6">
                        <label for="loanamountterm"> Loan Amount Term</label>
                        <input type="number" name="Loan_Amount_Term" class="form-control" id="loanamountterm" placeholder="Enter the no of days for which loan is to be granted!">
                </div>
                </div>
            </div>
                <div class="form-group">
                    <label for="credithistory">Credit History</label>
                    <select id="credithistory" name="Credit_History" class="form-control">
                        <option value="1">Pending Loans</option>
                        <option value="0">No Pending Loans</option>
                    </select>
                </div>

                
                <div class="form-group">
                    <button class="btn btn-info btn-lg">Submit</button>
                </div>
    
            </form>
        </div>

